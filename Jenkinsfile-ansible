pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Specify the branch if it's not 'master'
                git branch: 'main', url: 'https://github.com/El-Zedy/DevOps-Task.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook become: true, colorized: true, credentialsId: 'ansible-server', installation: 'Ansible', inventory: '/ansible/inventory', playbook: '/ansible/playbook.yaml', vaultTmpPath: ''
             }
        }
    }
 }
