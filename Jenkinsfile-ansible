pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Specify the branch if it's not 'master'
                git branch: 'main', url: 'https://github.com/El-Zedy/DevOps-Task.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
            dir('ansible') {
              sh "ansible-playbook palybook.yaml"
             }
        }
    }
 }
